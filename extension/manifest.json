{
  "manifest_version": 3,
  "name": "广理成绩核查助手",
  "version": "1.1.0",
  "description": "自动化填写学生学号和姓名到成绩查询系统",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://jwxt.gdlgxy.edu.cn/*",
    "https://zcpt.gdlgxy.edu.cn/*",
    "https://jwbb.gdlgxy.edu.cn/*",
    "http://localhost:8765/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jwxt.gdlgxy.edu.cn/*",
        "https://zcpt.gdlgxy.edu.cn/*",
        "https://jwbb.gdlgxy.edu.cn/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

