{
  "name": "grade-check",
  "version": "1.1.0",
  "description": "广理成绩自动化核查程序",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "node scripts/clean.js",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron:build": "npm run clean && npm run build:electron && vite build && electron-builder",
    "build:electron": "node scripts/copy-electron.js",
    "electron": "electron electron/main.js",
    "package:extension": "node scripts/package-extension.js"
  },
  "keywords": [],
  "author": "神奇小冬天",
  "homepage": "www.iamdt.cn",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.gradecheck.app",
    "productName": "广理成绩核查",
    "copyright": "Copyright © 2025 冬天的小窝",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "神奇小冬天",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "广理成绩核查",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "icon.ico"
    ],
    "extraFiles": [
      {
        "from": "extension",
        "to": "extension",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "icon.png",
        "to": "icon.png"
      }
    ]
  }
}
